<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:text="Identity\nVerification"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingHorizontal="30dp"
        android:text="Weâ€™ll need at least one of the following
documents to verify your identity"
        android:textAlignment="textStart"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/choose_verification_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="30dp"
        android:text="Please choose verification process"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textFontWeight="800"
        android:textSize="15dp"
        />

</LinearLayout>