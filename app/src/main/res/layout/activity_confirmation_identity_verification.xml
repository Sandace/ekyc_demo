<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.ConfirmationIdentityVerification">

    <ImageView
        android:id="@+id/back_button_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="20dp"
        android:contentDescription="TODO"
        android:src="@drawable/img" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:text="Identity\nVerification"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="15dp"
                android:background="@drawable/table_border"

                >

                <TableRow
                    android:layout_width="match_parent"
                    android:divider="#20000000"
                    android:showDividers="middle">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        android:paddingStart="7dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="2dp"
                        android:text="Card Name"
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textClock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_marginHorizontal="10dp"
                        android:paddingStart="7dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="2dp"
                        android:layout_weight="1"
                        android:text="Card No."
                        android:textColor="@color/black"
                        android:textFontWeight="600"
                        android:textSize="14sp" />
                </TableRow>

                <TableRow
                    android:divider="#20000000"
                    android:showDividers="middle">

                    <TextView
                        android:id="@+id/card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_marginHorizontal="5dp"
                        android:layout_weight="1"
                        android:text="Residence Card"
                        android:paddingStart="7dp"
                        android:paddingBottom="12dp"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/card_number_rc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:layout_marginStart="10dp"
                        android:paddingStart="7dp"
                        android:paddingBottom="12dp"
                        android:layout_weight="1"
                        android:text="LD243223EAFDF"
                        android:textSize="12sp" />
                </TableRow>
            </TableLayout>

            <FrameLayout
                android:id="@+id/image_frame_front"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="30dp"
                android:background="@color/black"
                android:backgroundTint="#D4D7DC"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/front_captured_image"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginVertical="20dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/edit_front_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="9dp"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/black"
                            android:layout_margin="2dp"
                            android:src="@drawable/icon_edit" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Front"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textFontWeight="800"/>
            <FrameLayout
                android:id="@+id/image_frame_oblique"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="30dp"
                android:background="@color/black"
                android:backgroundTint="#D4D7DC"
                app:layout_constraintTop_toTopOf="parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/front_captured_img_oblique"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerInParent="true"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginVertical="20dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/edit_oblique_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="9dp"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/black"
                            android:layout_margin="2dp"
                            android:src="@drawable/icon_edit" />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oblique (45 degree)"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textFontWeight="800"/>
            <FrameLayout
                android:id="@+id/image_frame_back"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="30dp"
                android:background="@color/black"
                android:backgroundTint="#D4D7DC"
                app:layout_constraintTop_toTopOf="parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/back_captured_img"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerInParent="true"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginVertical="20dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/edit_back_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="9dp"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/black"
                            android:layout_margin="2dp"
                            android:src="@drawable/icon_edit" />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textFontWeight="800"/>
            <FrameLayout
                android:id="@+id/image_frame_selfie"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="30dp"
                android:background="@color/black"
                android:backgroundTint="#D4D7DC"
                app:layout_constraintTop_toTopOf="parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/selfie_captured_img"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerInParent="true"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginVertical="20dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/edit_selfie_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="9dp"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/black"
                            android:layout_margin="2dp"
                            android:src="@drawable/icon_edit" />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>


            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selfie"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textFontWeight="800"/>
            <FrameLayout
                android:id="@+id/image_blink_frame"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="30dp"
                android:background="@color/black"
                android:backgroundTint="#D4D7DC"
                app:layout_constraintTop_toTopOf="parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/blink_captured_img"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_centerInParent="true"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginVertical="20dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/edit_blink_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="9dp"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/black"
                            android:layout_margin="2dp"
                            android:src="@drawable/icon_edit" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>


            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blink"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textFontWeight="800"/>
            <include
                android:id="@+id/submit_button"
                layout="@layout/custom_app_button"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginHorizontal="20dp"
                />
        </LinearLayout>

    </ScrollView>
</LinearLayout>