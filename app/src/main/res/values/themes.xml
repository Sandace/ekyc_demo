<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EkycDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3462B5</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#3462B5</item>
        <item name="colorSecondaryVariant">#3462B5</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EkycDemo.Fullscreen" parent="Theme.EkycDemo">
        <item name="android:actionBarStyle">@style/Widget.Theme.EkycDemo.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.EkycDemo.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">#3462B5</item>
        <item name="fullscreenTextColor">#3462B5</item>
    </style>
    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/white</item>
    </style>


</resources>